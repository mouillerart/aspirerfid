<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  
    <parent>
        <groupId>org.ow2.aspirerfid.bundles.commons</groupId>
        <artifactId>common-bundles</artifactId>
        <version>1.0</version>
    </parent>

    <groupId>org.apache.felix.commons</groupId>
    
  <artifactId>antlr-osgi</artifactId>
  <name>${pom.artifactId} bundle</name>
  <version>2.7.6</version>
  <description>
    The Antlr Library packaged as an OSGi bundle.
  </description>
  <packaging>bundle</packaging>  
  <dependencies>
    <dependency>
      <groupId>antlr</groupId>
      <artifactId>antlr</artifactId>
      <version>2.7.6</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      
       <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Export-Package>
                            antlr,antlr.collections.impl
                        </Export-Package>
                        <DynamicImport-Package>
                        	antlr.actions.java,
                        	antlr.actions.csharp,
                        	antlr.actions.cpp,
                        	antlr.actions.python,
                        	antlr.debug,
                        	antlr.debug.misc,
                        	antlr.collections,
                        	antlr.build,
                        	antlr.preprocessor,
                        	antlr.ASdebug
                        </DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
            
    </plugins>
  </build>
</project>
