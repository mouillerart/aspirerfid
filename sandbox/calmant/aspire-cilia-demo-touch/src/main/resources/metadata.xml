<ipojo xmlns:cilia="fr.liglab.adele.cilia" xmlns:jmx="org.apache.felix.ipojo.handlers.jmx">

   <component name="aspire-executor" classname="fr.imag.adele.aspire.ibuddy.Executor"
      immediate="true" architecture="true">
      <requires field="shell" />

      <properties>
         <property name="commands" field="myCommands" />
      </properties>

      <!--
      <jmx:config>
         <jmx:method name="addCommand" description="Add commands to component" />
      </jmx:config>
      -->

      <cilia:immediate-scheduler />
      <cilia:multicast-dispatcher />
   </component>

   <component classname="fr.imag.adele.aspire.ibuddy.WireadminProcessor"
      name="aspire-sensor-consumer" architecture="true">

      <callback transition="validate" method="activate" />
      <callback transition="invalidate" method="deactivate" />

      <properties>
         <property name="pid" field="m_PID" />
         <property field="m_pollDelay" name="pollDelay" />
      </properties>

      <!--
         <jmx:config> <property field="m_pollDelay" name="pollDelay" rights="rw"
         /> </jmx:config>
      -->
      <cilia:periodic-scheduler />
      <cilia:multicast-dispatcher />
   </component>


