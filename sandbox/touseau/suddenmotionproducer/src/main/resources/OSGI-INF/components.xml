<scr:component
  name="MotionSensorService"
  immediate="true"
  xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
  <scr:implementation
    class="org.ow2.aspirerfid.sensor.motionsensorproducer.impl.MotionSensorImpl" />
  <scr:service>
    <scr:provide
      interface="org.ow2.aspirerfid.sensor.motionsensorproducer.service.MotionSensorService" />
  </scr:service>
</scr:component>
<scr:component
  name="MotionSensorClient"
  xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0"
  immediate="true">
  <scr:implementation
    class="org.ow2.aspirerfid.sensor.motionsensorproducer.client.MotionSensorClientImpl" />
  <scr:reference
    name="MotionSensorService"
    interface="org.ow2.aspirerfid.sensor.motionsensorproducer.service.MotionSensorService"
    cardinality="1..1"
    policy="dynamic"
    bind="setMotionSensorService"
    unbind="unsetMotionSensorService" />
</scr:component>