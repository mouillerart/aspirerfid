<?xml version="1.0" standalone="yes"?>
<agents id='jmxml.demo'>

  <!-- descriptions attributes can be used for commenting generated files or for echoting during the execution -->

  <agent id="agent1">

    <parallel
      description="parallel execution of the elements"
    >

    <sequential
          description="sequential execution of the elements"
    >

      <mbean objectName="java.lang:type=OperatingSystem">
<!--        <attributes resultProperties="agent1._operatingsystem"
          description="put all mbean attributes in the properties prefixed by agent1._operatingsystem"/>
-->
      </mbean>


      <mbean objectName="java.lang:type=Memory">
<!--
        <attributes>
          <attribute name="Verbose" type="boolean"
                    description="set the attribute to true"
          >true</attribute>
        </attributes>
-->        
        <attribute name="Verbose" type="boolean"
                    description="set the attribute to true"
          >true</attribute>

        <operation name="gc"
                    description="invoke the gc() operation"/>
        
        <attribute name="Verbose" type="boolean"
                    description="set the attribute to true"
          >false</attribute>
             
       </mbean>
      
      <mbean objectName="java.util.logging:type=Logging">
        <!-- add the value to the properties -->
        <attribute name="LoggerNames" resultProperty="agent1._loggernames"
                description="get the array cells and put them in the properties prefixed by agent1._loggernames"/>
        
        <operation name="getLoggerLevel" resultProperty="agent1._loggerLevel"
                    description="invoke the getLoggerLevel() operation. The result is in the property agent1._loggerLevel">
          <arg>${agent1._loggernames}.0</arg>
        </operation>
        
      </mbean>
    
    </sequential>	
	
    </parallel>
	
  </agent>

</agents>  