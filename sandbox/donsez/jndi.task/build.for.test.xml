  <!-- set global properties for this build -->
  <property name="task.classpath" value="./target/classes"/>

	
  <property name="name" value="ou=users"/>
	
	
  <taskdef name="jndi" classname="org.ow2.aspirerfid.jnditask.JNDITask" classpath="${task.classpath}"/>

  <target name="init">
  </target>

  <target name="run" depends="init">
	<jndi
		dirContextRef="ldapCnx"
		closeAtEnd="true"
		name="${name}"
		verbose="true"
		filter="(mail=*)"
		propertiesPrefix = "entry1."
	>
			<env name="java.naming.factory.initial" value="com.sun.jndi.ldap.LdapCtxFactory"/>
			<env name="java.naming.provider.url" value="ldap://localhost:10389/ou=system"/>
			<env name="java.naming.security.principal" value="uid=admin,ou=system"/>
			<env name="java.naming.security.credentials" value="secret"/>
			<env name="java.naming.security.authentication" value="simple"/>
	</jndi>
  	<echo>Mail is ${entry1.mail}</echo>

  	<!-- connection -->
	<jndi
		dirContextRef="ldapCnx2"
		propertiesFile="ldap-jndi.properties"
		verbose="true"
	/>

  	<!-- search -->
	<jndi
			dirContextRef="ldapCnx2"
			name="${name}"
			verbose="true"
			propertiesPrefix = "entry2."
	><filter><![CDATA[(&(mail=*))]]></filter></jndi>

  	<echo>Mail is ${entry2.mail}</echo>

  	<!-- close -->
	<jndi
		dirContextRef="ldapCnx2"
		verbose="true"
		closeAtEnd="true"
	/>
	  		
  </target>
	
	
  <target name="clean">
  </target>	
</project>

