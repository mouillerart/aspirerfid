    <target name="openPage">
        <attribute name="url" />
        <exec executable="start">
            <arg value="@{url}" />
        </exec>
    </target>

    <target name="test">
      <exec executable="cmd">
        <arg value="/c"/>
        <arg value="start"/>
        <arg value="@{url}"/>
      </exec>
