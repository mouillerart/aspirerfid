<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.ow2.aspirerfid</groupId>
	<artifactId>xmpp-client-library</artifactId>
	<packaging>bundle</packaging>
	<version>3.0.4</version>
	<name>XMPP Client Library (Smack/Smackx wrapper bundle)</name>
	<description></description>
	<dependencies>
		<dependency>
			<groupId>jivesoftware</groupId>
			<artifactId>smack</artifactId>
			<version>3.0.4</version>
		</dependency>
		<dependency>
			<groupId>jivesoftware</groupId>
			<artifactId>smackx</artifactId>
			<version>3.0.4</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>
							<!--
								org.jivesoftware.smackx.ServiceDiscoveryManager;resolution:=optional,
								org.jivesoftware.smackx.XHTMLManager;resolution:=optional,
								org.jivesoftware.smackx.muc.MultiUserChat;resolution:=optional,
								org.jivesoftware.smackx.filetransf.FileTransferManager;resolution:=optional,
								org.jivesoftware.smackx.LastActivityManager;resolution:=optional,
							-->
							org.jivesoftware.smack,
							org.jivesoftware.smackx,
							*
						</Import-Package>
						<Export-Package>
							org.jivesoftware.*,
							*
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>